@{
    ViewBag.Title = "Configuración de Parámetros del Sistema";
    Layout = @Url.Content("~/Views/Shared/_Layout.cshtml");
}

<script src="@Url.Content("~/Scripts/Views/Configuracion/Index.js")" type="text/javascript"></script>

<div class="panel panel-primary" id="dataForm">
    <h3 class="panel-heading">Listado de Parámetros del Sistema</h3>
    <div class="checkbox margin_zero">
        <label>
            <input type="button" class="btn btn-info hidden" name="btnNuevo" id="btnNuevo" value="Nuevo" title="Nuevo registro" />
            <input type="button" class="btn btn-info" name="btnBuscar" id="btnBuscar" value="Buscar" title="Realizar búsqueda" />
            <input type="button" class="btn btn-info" name="btnLimpiar" id="btnLimpiar" value="Limpiar" title="Limpiar parametros" />
            <input type="button" class="btn btn-info" name="btnSalir" id="btnSalir" value="Salir" title="Salir" />
        </label>
    </div>

    <div class="panel-body">
        <div class="form-group">

            <div class="btn-group">
                <label class="col-md-3 control-label" for="chkindActivo_prm">
                    ¿Activos?:

                    <input type="checkbox" id="chkindActivo_prm" name="chkindActivo_prm" class="switch-input" checked="checked" />
                    <label for="pchkActivo" class="col-md-8 switch-label f_label1" title="¿Activos?">
                        <span class="toggle--on">SI</span>
                        <span class="toggle--off">NO</span>
                    </label>
                </label>
            </div>

            <div id="divLista">
                <table id="gridConfig"></table>
                <div id="pagerConfig">
                </div>
                <br />
            </div>

        </div>
    </div>


    <div>
        <input type="hidden" id="hddValorTimeout" name="hddValorTimeout" value="@ViewBag.ValorTimeout" />       
        <input type="hidden" id="hddMensajeError" name="hddMensajeError" value="@ViewBag.MensajeError" />
        <input type="hidden" id="hddnomController" name="hddnomController" value="@ViewBag.nomController" />
        <input type="hidden" id="hddnomAction" name="hddnomAction" value="@ViewBag.nomAction" />
    </div>

</div>