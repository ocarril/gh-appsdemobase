@model System.Web.Mvc.HandleErrorInfo

@{
    Layout = @Url.Content("~/Views/Shared/_Layout.cshtml");
    ViewBag.Title = "Error 404: Página no encontrada.";
}

@*<link href="~/Content/Login.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/Views/Errores/Errores.js")" type="text/javascript"></script>

<div class="panel panel-warning boxerror" id="dataForm">
    <h3 class="panel-heading">@ViewBag.Title</h3>
    <div class="panel-body">
        <h3>@ViewBag.desMensaje</h3>
        <div class="row">
            <div>
                <div id="imgLogo">
                    <table>
                        <tr>
                            <td rowspan="2">
                                <img class="imgLogos" src="~/Content/Images/imgDemoSystem_Logo.png" style="width:120px;" />
                            </td>
                            <td>
                                <h2 style="text-align:center; text-shadow:unset;
                                    text-transform:uppercase; font:bold;">
                                    SISTEMA DE GESTION COMERCIAL
                                </h2>
                                <h6 style="text-align:center; text-shadow:unset;
                                    text-transform:uppercase; font:bold;">
                                    MODULO DE FACTURACIÓN ELECTRONICA
                                </h6>
                            </td>
                        </tr>
                    </table>
                    <h3 style="text-align:left; text-shadow:unset;"
                        class="checkbox margin_zero">
                        La página que intentas solicitar no se encuentra en el servidor (Error 404)
                    </h3>
                </div>
            </div>
            <div class="col-md-10 ">
                <h5 class="text-danger checkbox margin_zero">
                    @ViewBag.desMensaje !!!. Se produjo un error al procesar su solicitud..
                </h5>
            </div>
        </div>
        <div class="checkbox margin_zero">
            <label>
                <input type="button" class="btn btn-info" name="btnSalir" id="btnSalir" style="width:auto;"
                       value="Ir a página de inicio" title="Volver a página de inicio" />
            </label>
        </div>
    </div>
</div>


