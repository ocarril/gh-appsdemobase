@************************************************************************
     Archivo    : TipoCambio.cshtml
     Propósito  : Vista para el listado de TIPOS DE CAMBIO
     Se asume   : N/A
     Efectos    : N/A
     Notas      : N/A
     Autor      : 
     Fecha/Hora de Creación : 
     Fecha/Hora Modificado  :
    ************************************************************************@
@{
    ViewBag.Title = "Tipo de cambio";
    Layout = @Url.Content("~/Views/Shared/_Layout.cshtml");
}

@*<script src="@Url.Content("~/bundles/tipocambio")" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/Views/comercial/tipocambio.js")" type="text/javascript"></script>
<div class="panel panel-primary" id="dataForm">
    <h3 class="panel-heading">Listado de Tipos de Cambio</h3>
    <div class="checkbox margin_zero">
        <label>
            <input type="button" class="btn btn-info" name="btnNuevo" id="btnNuevo" value="Nuevo" title="Nuevo registro" />
            <input type="button" class="btn btn-info" name="btnBuscar" id="btnBuscar" value="Buscar" title="Realizar búsqueda" />
            <input type="button" class="btn btn-info" name="btnLimpiar" id="btnLimpiar" value="Limpiar" title="Limpiar parametros" />
            <input type="button" class="btn btn-info" name="btnSalir" id="btnSalir" value="Salir" title="Salir" />
        </label>
    </div>

    <div class="panel-body">
        <div class="form-group">

            <div class="btn-group">
                <label for="txtfecInicio">
                    Desde:
                    <input type="text" id="txtfecInicio" name="txtfecInicio" class="form-control" title="Fecha de inicio a consultar" style="width:100px;" />
                </label>
            </div>

            <div class="btn-group">
                <label for="txtfecFinal">
                    Hasta:
                    <input type="text" id="txtfecFinal" name="txtfecFinal" class="form-control" title="Fecha de fin a consultar" style="width:100px;" />
                </label>
            </div>

            <div class="btn-group">
                <label for="cboMonedas">
                    Moneda:
                    @Html.DropDownList("cboMonedas", null, new { @id = "cboMonedas", @class = "form-control", @style = "width:220px" })
                </label>
            </div>
            <div class="btn-group">
                <label class="col-md-3 control-label" for="chkEstadoBus">
                    ¿Activos?:
                    <input type="checkbox" id="chkEstadoBus" name="chkEstadoBus" class="switch-input" checked="checked" />
                    <label for="chkEstadoBus" class="col-md-8 switch-label f_label1" title="¿Activos?">
                        <span class="toggle--on">SI</span>
                        <span class="toggle--off">NO</span>
                    </label>
                </label>
            </div>
            <div class="btn-group">
                <label for="chkEstadoBus">
                    Sunat:
                    <a target="_blank" href="@ViewBag.webTipoCambio" title="" @ViewBag.webTipoCambio ">
                        Tipo de Cambio SUNAT (Hacer click aqui)
                    </a>
                </label>
            </div>

        </div>

        <div class="form-group" id="divLista">
            <table id="gridEntidad"></table>

            <div id="pagerEntidad">
            </div>
            <br />
        </div>
    </div>

    <div>
        <input type="hidden" id="hddMensajeError" name="hddMensajeError" value="@ViewBag.MensajeError" />
        <input type="hidden" id="hddnomController" name="hddnomController" value="@ViewBag.nomController" />
        <input type="hidden" id="hddnomAction" name="hddnomAction" value="@ViewBag.nomAction" />

        <input type="hidden" id="hddfecInicio" name="hddfecInicio" value="@ViewBag.fecInicio" />
        <input type="hidden" id="hddfecFinal" name="hddfecFinal" value="@ViewBag.fecFinal" />
    </div>
</div>
